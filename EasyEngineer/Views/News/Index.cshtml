@model EasyEngineer.Models.News

@{
    ViewBag.Title = "Новая схема";
}

<h2>Index</h2>

@using (Html.BeginForm("Новая схема", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">Название схемы</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">Описание</div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Text, new { @class = "form-control", @rows = "20", @cols = "50" })
            @Html.ValidationMessageFor(model => model.Text)
        </div>
        <div class="editor-label">Теги:</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tag)
            @Html.ValidationMessageFor(model => model.Tag)
        </div>

        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}


<div>
    @Html.ActionLink("Вернуться к списку", "Show")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
